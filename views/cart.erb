<h2>Cart</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Qty</th>
		</tr>
	</thead>
	<tbody>
		<%total_price = 0%>
		<%total_qty = 0%>
		<% @items.each do |item|%>
		<tr>
			<td><%= item[0].title%></td>
			<td><%= item[0].price%></td>
			<td><%= item[1]%></td>
		</tr>
		<%total_price += item[0].price * item[1].to_i%>
		<%total_qty += item[1].to_i%>
		<%end%>
		<tr>
			<td></td>
			<td>Total: <%= total_price%> Rub</td>
			<td><%= total_qty%></td>
		</tr>
	</tbody>
</table>

<form action="/place_order" method="POST">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

  	<div class="form-group" id="aaa">
	    <label>Name</label>
	    <input type="text" placeholder="Your name" class="form-control" name="order[name]">
	</div>
	<div class="form-group">
	  	<label>Phone</label>
	    <input type="text" placeholder="Your phone" class="form-control" name="order[phone]">
	</div>
	<div class="form-group">
	  	<label>Address</label>
	    <textarea placeholder="Delivery address" class="form-control" name="order[address]" ></textarea> 
	</div>
	<button type="submit" class="btn btn-success btn-lg">Place this order!</button>
</form>	