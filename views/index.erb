<h2>Welcome to Pizza Shop!</h2>

<div class="row">
	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<h4><%= p.title%></h4>
				<img src="<%= p.path_to_image%>">				
			</div>
			<div>
				<p><%= p.description%></p>				
			</div>

			<div>
				Size: <%= p.size %> cm
			</div>
			<div>
				Price: <%= p.price %> rub
			</div>
			<div>
				<button class="btn btn-success" onclick="add_to_cart(<%= p.id%>)">Add to cart</button>				
			</div>
		</div>
	<% end %>
</div>
<br>
<br>
<button class="btn btn-primary" onclick="something()">Click me!</button>
<button class="btn btn-danger" onclick="clear_cart()">Clear</button>
